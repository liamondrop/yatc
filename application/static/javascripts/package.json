{
  "name": "yatc",
  "version": "0.0.0",
  "description": "Yet Another Twitter Client",
  "main": "src/app.js",
  "author": "Liam Bowers",
  "devDependencies": {
    "babel-preset-es2015": "^6.1.2",
    "babel-preset-stage-0": "^6.1.2",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "envify": "^3.4.0",
    "jasmine": "^2.3.2",
    "uglify-js": "^2.5.0",
    "watchify": "^3.6.0"
  },
  "dependencies": {
    "backbone": "^1.2.3",
    "jquery": "^2.1.4",
    "underscore": "^1.8.3"
  },
  "scripts": {
    "start": "watchify src/app.js -o build/bundle.js -v",
    "uglify": "uglifyjs build/bundle.js > build/bundle.min.js -cm",
    "test": "browserify ./spec/input/*-spec.js > ./spec/output/spec.bundle.js && jasmine"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": ["es2015", "stage-0"]
        }
      ],
      "envify"
    ]
  }
}
